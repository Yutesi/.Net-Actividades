@model Angel_Gregorio_Briceño_C_.Models.Venta

@{
    ViewData["Title"] = "Detalles de Venta";
}

<h1>Detalles de Venta</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            ID Venta
        </dt>
        <dd class="col-sm-10">
            @Model.VentaId
        </dd>
        <dt class="col-sm-2">
            Cliente
        </dt>
        <dd class="col-sm-10">
            @Model.Cliente.Nombre
        </dd>
        <dt class="col-sm-2">
            Fecha
        </dt>
        <dd class="col-sm-10">
            @Model.FechaVenta.ToString("dd/MM/yyyy HH:mm")
        </dd>
        <dt class="col-sm-2">
            Total
        </dt>
        <dd class="col-sm-10">
            @Model.Total.ToString("C")
        </dd>
    </dl>

    <h4>Productos Vendidos</h4>
    <table class="table table-bordered">
        <thead class="table-light">
            <tr>
                <th>Producto</th>
                <th>Cantidad</th>
                <th>Precio Unitario</th>
                <th>Subtotal</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var detalle in Model.VentaDetalles)
            {
                <tr>
                    <td>@detalle.Producto.Nombre</td>
                    <td>@detalle.Cantidad</td>
                    <td>@detalle.Precio.ToString("C")</td>
                    <td>@((detalle.Cantidad * detalle.Precio).ToString("C"))</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div>
    <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
</div>