@model Angel_Gregorio_Briceño_C_.Models.Venta

@{
    ViewData["Title"] = "Eliminar Venta";
}

<h1>Eliminar Venta</h1>

<h3>¿Estás seguro que quieres eliminar esta venta?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            ID Venta
        </dt>
        <dd class="col-sm-10">
            @Model.VentaId
        </dd>
        <dt class="col-sm-2">
            Cliente
        </dt>
        <dd class="col-sm-10">
            @Model.Cliente.Nombre
        </dd>
        <dt class="col-sm-2">
            Fecha
        </dt>
        <dd class="col-sm-10">
            @Model.FechaVenta.ToString("dd/MM/yyyy HH:mm")
        </dd>
        <dt class="col-sm-2">
            Total
        </dt>
        <dd class="col-sm-10">
            @Model.Total.ToString("C")
        </dd>
    </dl>

    <h5>Productos en esta venta:</h5>
    <ul>
        @foreach (var detalle in Model.VentaDetalles)
        {
            <li>@detalle.Producto.Nombre - @detalle.Cantidad x @detalle.Precio.ToString("C")</li>
        }
    </ul>

    <form asp-action="Delete">
        <input type="hidden" asp-for="VentaId" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>