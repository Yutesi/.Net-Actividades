@model IEnumerable<Angel_Gregorio_Briceño_C_.Models.Venta>

@{
    ViewData["Title"] = "Ventas";
}

<h1>Lista de Ventas</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Crear Nueva Venta</a>
</p>

<table class="table table-striped">
    <thead class="table-dark">
        <tr>
            <th>ID</th>
            <th>Cliente</th>
            <th>Fecha</th>
            <th>Total</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.VentaId</td>
                <td>@item.Cliente.Nombre</td>
                <td>@item.FechaVenta.ToString("dd/MM/yyyy")</td>
                <td>@item.Total.ToString("C")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.VentaId" class="btn btn-info btn-sm">Detalles</a>
                    <a asp-action="Delete" asp-route-id="@item.VentaId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

@if (!Model.Any())
{
    <div class="alert alert-warning">
        No hay ventas registradas todavía.
    </div>
}