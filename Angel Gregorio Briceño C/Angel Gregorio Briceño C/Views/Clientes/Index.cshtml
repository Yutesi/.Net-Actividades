@model IEnumerable<Angel_Gregorio_Briceño_C_.Models.Cliente>

@{
    ViewData["Title"] = "Clientes";
}

<h1>Lista de Clientes</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Crear Nuevo Cliente</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Email</th>
            <th>Teléfono</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@Html.DisplayFor(modelItem => item.Telefono)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.ClienteId" class="btn btn-warning">Editar</a>
                    <a asp-action="Details" asp-route-id="@item.ClienteId" class="btn btn-info">Detalles</a>
                    <a asp-action="Delete" asp-route-id="@item.ClienteId" class="btn btn-danger">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>